<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobileapp">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-library android:name="org.apache.http.legacy"
            android:required="false"
            ></uses-library>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ContactActivity"
            android:label="Contacts"
            android:parentActivityName=".MainApp">
        </activity>
        <activity
            android:name=".MainApp"
            android:label="Main App"
            android:theme="@style/NoActionBar"

            >
        </activity>
<!--        <activity-->
<!--            android:name=".ContactDetail"-->
<!--            android:label="Contact Detail"-->
<!--            android:parentActivityName=".ContactActivity">-->
<!--        </activity>-->
        <activity
            android:name=".ProductActivity"
            android:label="List of Products"
            android:parentActivityName=".MainApp">
        </activity>

        <activity
            android:name=".MainGroupLayout"
            android:label="List of Groups"
            android:parentActivityName=".MainApp"
            android:theme="@style/NoActionBar"
            >
        </activity>

        <activity
            android:name=".RegisterUserActivity"
            android:label="Register User"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity
            android:name=".EditProfileActivity"
            android:label="Edit Profile"
            android:parentActivityName=".MainApp">
        </activity>

        <activity
            android:name=".CheckCurrentPassword"
            android:label="Current Password"
            android:parentActivityName=".MainApp">
        </activity>
        <activity
            android:name=".ChangeNewPassword"
            android:label="New Password"
            android:parentActivityName=".MainApp">
        </activity>
        <activity
            android:name=".AddNewContacts"
            android:label="New Contact"
            android:parentActivityName=".MainApp">
        </activity>
    </application>

</manifest>